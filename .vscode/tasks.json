{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "commitlint:validate",
      "type": "process",
      "command": "/bin/zsh",
      "args": ["-l", "-i", "-c", "npm run commitlint -- \"--\" \"${input:fullCommitMessage}\""],
      "group": "none"
    },
    {
      "label": "commitlint:file",
      "type": "process",
      "command": "/bin/zsh",
      "args": ["-l", "-i", "-c", "npm run commitlint:file -- commit-message.tmp"],
      "group": "none"
    },
    {
      "label": "gitDiff:toFile",
      "type": "process",
      "command": "/bin/zsh",
      "args": ["-l", "-i", "-c", "git diff --staged > gitdiff.tmp"],
      "group": "none"
    },
    {
      "label": "backend: dev (non-login zsh)",
      "type": "process",
      "command": "zsh",
      "args": ["-c", "cd backend && node --env-file=.env --watch src/index.js"],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "fullCommitMessage",
      "type": "promptString",
      "description": "Enter the full commit message as a single string"
    }
  ]
}
