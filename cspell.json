{
  "version": "0.2",
  "language": "en",
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": "./project-words.txt",
      "addWords": true,
      "noSuggest": false,
      "useCompounds": false
    }
  ],
  "caseSensitive": false,
  "dictionaries": [
    "project-words",
    "en_us",
    "en_slang",
    "softwareTerms",
    "git",
    "npm",
    "node",
    "typescript",
    "html",
    "css"
  ],
  "useGitignore": true,
  "ignorePaths": [
    "/{node_modules,coverage,dist,playwright-report}/",
    "**/{.env*,*.config.js,*.yml,*.toml,package*.json,*.txt,*.tmp,**/*.stitch}",
    "supabase/config.toml",
    "**/*/mockGooglePlaces.*"
  ]
}
