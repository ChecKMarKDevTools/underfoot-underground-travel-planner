{
  "name": "@underfoot/frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "build": "vite build",
    "preview": "vite preview --host --port 5173 --strictPort",
    "test": "npm run test:unit && npm run test:e2e",
    "playwright:install": "playwright install --with-deps chromium",
    "test:unit": "vitest run --coverage",
    "test:e2e": "node -e \"try { require('@playwright/test'); } catch(e) { console.log('Installing Playwright dependencies...'); require('child_process').execSync('npm run playwright:install', {stdio: 'inherit'}); }\" && vite build && playwright test"
  },
  "dependencies": {
    "esbuild": "0.25.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "wrangler": "4.38.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "vite": "^7.1.6",
    "vitest": "^3.2.4"
  }
}
