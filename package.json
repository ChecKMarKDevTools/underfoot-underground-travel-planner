{
  "name": "underfoot-underground-travel-planner",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "description": "A submission for the Dev.to n8n + BrightData hackathon. Underground travel planner to find those hidden gems that are a must see.",
  "keywords": [
    "devto",
    "n8n",
    "brightdata",
    "hackathon",
    "travel"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anchildress1/underfoot-underground-travel-planner.git"
  },
  "bugs": {
    "url": "https://github.com/anchildress1/underfoot-underground-travel-planner/issues"
  },
  "homepage": "https://github.com/anchildress1/underfoot-underground-travel-planner#readme",
  "author": {
    "name": "Ashley Childress",
    "url": "https://dev.to/anchildress11"
  },
  "workspaces": [
    "frontend",
    "backend",
    "n8n"
  ],
  "volta": {
    "node": "24.6.0",
    "npm": "11.5.1"
  },
  "engines": {
    "node": ">=24.6.0",
    "npm": ">=11.5.1"
  },
  "scripts": {
    "dev": "npm run -w backend dev & npm run -w frontend dev",
    "build": "npm run -w backend build && npm run -w frontend build",
    "start": "npm run -w backend start",
    "commitlint": "commitlint --edit",
  "format": "npm exec -- prettier --write . && npm run format:remark && npm run format:fix-admonitions",
    "format:remark": "npm exec -- remark . -o --quiet",
    "format:fix-admonitions": "node scripts/fix-github-admonitions.js",
    "lint": "eslint --fix --max-warnings=0 --no-warn-ignored",
    "spellcheck": "cspell . --show-suggestions",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "cd backend && npm run test:unit && cd ../frontend && npm run test:unit && cd ..",
    "test:e2e": "cd backend && npm run test:e2e && cd ../frontend && npm run test:e2e && cd .."
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@cspell/eslint-plugin": "^9.2.0",
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "cspell": "^9.2.0",
    "esbuild": "^0.21.5",
    "eslint": "^9.33.0",
    "eslint-plugin-naming": "^0.1.10",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "lefthook": "^1.12.3",
    "prettier": "^3.6.2",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "uninstall": "^0.0.0"
  }
}
