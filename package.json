    "name": "Ashley Childress",
    "url": "https://dev.to/anchildress11"
  },
  "workspaces": [
    "frontend",
    "backend",
    "n8n"
  ],
  "volta": {
    "node": "24.6.0",
    "npm": "11.5.2"
  },
  "engines": {
    "node": ">=24.6.0",
    "npm": ">=11.5.2"
  },
  "scripts": {
    "dev": "npm run -w backend dev & npm run -w frontend dev",
    "build": "npm run -w backend build && npm run -w frontend build",
    "start": "npm run -w backend start",
    "commitlint": "commitlint --edit",
    "format": "npm run format:prettier && npm run format:remark && npm run format:fix-admonitions",
    "format:prettier": "prettier --write . --log-level silent",
    "format:remark": "remark . -o --quiet",
    "format:fix-admonitions": "node scripts/fix-github-admonitions.js",
    "lint": "eslint . --fix --max-warnings=0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
