  "keywords": [
    "devto",
    "n8n",
    "brightdata",
    "hackathon",
    "travel"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anchildress1/underfoot-underground-travel-planner.git"
  },
  "bugs": {
    "url": "https://github.com/anchildress1/underfoot-underground-travel-planner/issues"
